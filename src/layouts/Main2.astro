---
import Search from '../components/Search.astro';
import { Image } from "astro:assets";
import x from '../assets/icons/x.svg';
import '../styles/Global.css';
import BottomNav from '../components/BottomNav.astro';
const {path1, path2, path3, path4, path5, path6, path7} = Astro.props;

---

<div class = "container">
    <div class = "screen">
        <div class = "box1">
            <div class = "top">
                <div class = "row1">
                    <h1 id = "logo"> sarai studies </h1>
                    <Image id = "navItem" src = {x} alt = ""/> 
                </div>
                <div class = "row2">
                    <Search/>
                </div>
                <div class = "content">
                    <slot></slot>
                </div>
                
            </div>                
                <BottomNav path1 = {path1} path2 = {path2} path3 = {path3} path4 = {path4} path5 = {path5} path6 = {path6} path7 = {path7}></BottomNav>
        </div>

    </div>

</div>

<style>

    #logo{
        font-family: var(--primaryFont);
        font-weight: 400;
    }
    .top{
        width:100%;
        height:min-content;
        display: flex;
        flex-direction: column;
        gap:1em;
        align-items: center;
    }

    .row1{
        width:100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding:0 20px;

    }
    .row2{
        width:100%;

    }

    .box1{
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-direction: column;
        gap:2em;
        height:100%;

    }

    .content{
        width:90%;
        display: flex;
        flex-direction: column;
        gap:48px;
    }
    *{
        margin:0;
        padding:0;
        box-sizing: border-box;
    }
    .container{
        height:100vh;
        width:100%;
        display: flex;
        justify-content: center;
        align-items: center;


    }

    .screen{
        border: var(--border);
        height:98%;
        width:98%;
        padding-top:20px;
       
    }
</style>