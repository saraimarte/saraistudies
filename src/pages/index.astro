---
import underConstruction from '../assets/underConstruction.jpg';
import {Image} from "astro:assets";
import Main from '../layouts/Main2.astro';

const path1 = "classes/FinancialAccounting/facc";
const path2 = "classes/ManagerialAccounting/macc";
const path3 = "classes/Calc1/calc1";
const path4 = "classes/Calc2/calc2";
const path5 = "classes/Micro/micro";
const path6 = "classes/Macro/macro";
const path7 = "classes/Stats/stats";

---


<Main path1 = {path1} path2 = {path2} path3 = {path3} path4 = {path4} path5 = {path5} path6 = {path6} path7 = {path7}>
	<div class = "post-content">
		<div class = "box">
			<h1 class = "title">about</h1>
			<p>a collection of survival guides for classes ive taken at rutgers.</p>
		</div>
		<div class = "box">
			<h1 class = "title">how to use</h1>
			<p>either search for a class up top or explore the class tabs at the bottom.</p>
		</div>
		<div class = "box">
			<h1 class = "title" >prefer video?</h1>
			<p>if you don't like reading and rather watch how i do things, check out my videos on sarai studies.</p>
		</div>
	</div>
	

</Main>

<style>
	.post-content{
		width:90%;
        display: flex;
        flex-direction: column;
        gap:48px;
        width:100%;
	}
	
	#logo, h1{
        font-family: var(--primaryFont);
        font-weight: 400;
    }

    .title{
        font-family: var(--primaryFont);
        text-decoration: underline;
        font-size: var(--text-md);
    }

    p{
        font-size: var(--text-lg);
    }
	

</style>
